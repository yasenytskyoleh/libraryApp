.b-content.container.panel-body
    h2.b-content__h2 List books {{currentAuthor.surname}} {{currentAuthor.name}} {{currentAuthor.patronymic}}
    button.b-content__btn.btn-create(ng-click="createBook()") Add books
    button.b-content__btn.btn-back(ng-click="back()") Back
    table.b-content__table.table
        thead.b-table__thead
            tr
                th Book name
                th Genre
                th Number of pages
                th Edit book
                th Delete book
        tbody.b-table__tbody
            tr(ng-repeat='book in currentAuthor.books')
                td {{book.name}}
                td {{book.genre}}
                td {{book.numberPages}}
                td
                    button
                        i.fa.fa-pencil-square-o.fa-100px(aria-hidden="true", ng-click="editBook(book)")
                td
                    button
                        i.fa.fa-times.fa-100px(aria-hidden="true", ng-click="delBook(currentAuthor,book)")
