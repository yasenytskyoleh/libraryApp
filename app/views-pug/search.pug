div.panel-body
    h2 List authors
    table.table
        thead
            tr
                th
                    a(ng-click="sort(sortValue)") Author name
                th BirthDate
                th Book name
                th Genre
                th Number of pages
        tbody
            tr(ng-repeat='item in findBooks')
                td
                    a(ng-click= "chooseAuthor(item.id)") {{item.surname}} {{item.name}} {{item.patronymic}}
                td {{item.birthdate | date :"dd.MM.y"}}
                td {{item.bookName}}
                td {{item.genre}}
                td {{item.numberPages}}