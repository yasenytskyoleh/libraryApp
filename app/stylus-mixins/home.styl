.b-home
  width 100%
  height 100vh
  min-height 700px
  position relative
  margin 0
  padding 0

.b-header
  position absolute
  top 5%
  left 0
  z-index 3

.b-menu,.nav
  float right

.nav
  padding 17px 0

.dropdown-content a
  margin 2px 5px
  padding 12px 7px
  text-decoration none
  display inline-block
  text-transform capitalize
  font-size 1.2em
  text-align center
  &:hover
    border-bottom solid 2px $brand_white
    margin 0 5px

@media all and (max-width 768px)
  .b-menu, .nav
    float: none
  .b-home
      min-height 100vh
  .item
      min-height 100vh
  .b-logo
    &__img
      margin 0 auto
  .nav
    margin 50px
  .dropdown-content a
    display  block

.carousel
  z-index -1
  height 100vh

.item
  widht 100%
  height 100vh
  min-height 700px
  transition opacity 1s
  &::before
    content ''
    background-color rgba(0,0,0,0.5)
    position absolute
    top 0
    left 0
    width 100vw
    height 100vh
    min-height 800px
  &:nth-child(1)
    background url('../images/banner-1.png') no-repeat center center
    background-size cover
  &:nth-child(2)
    background url('../images/banner-2.png') no-repeat center center
    background-size cover
  &:nth-child(3)
    background url('../images/banner-3.png') no-repeat center center
    background-size cover

.title
  text-align center
  margin-top 20px
  padding 10px
  text-shadow 2px 2px #000
  color $brand_white

.b-center-text
  text-align center
  color $brand_white
  width 70%
  margin 200px auto
  position relative
  &__h1
    font-size 5.294em
    text-transform uppercase
  &__h2
    font-size 1.765em
    text-transform uppercase
  &__p
    width 80%
    margin 0 auto

@media all and (max-width 768px)
  .b-center-text
    margin 0 auto 30px

.b-search
  margin 20px auto
  width 400px
  height 50px
  background #444
  background rgba(0,0,0,.3)
  border-radius 10px
  &__input
    width 330px
    height 20px
    padding 25px 10px
    float left
    border 0
    outline 0
    background rgba(0,0,0,0)
    &::placeholder
      color $brand_white
      font-style italic
  &__btn
    position relative
    float right
    right 0
    cursor pointer
    border 0
    outline 0
    height 50px
    width 70px
    border-radius: 0 10px 10px 0
    background $brand_lightBlue